--[[
    BIG SCREEN ID
    Menampilkan ID Map di tengah layar.
]]

if not game:IsLoaded() then game.Loaded:Wait() end

local ScreenGui = Instance.new("ScreenGui")
local TextLabel = Instance.new("TextLabel")

ScreenGui.Parent = game.CoreGui
ScreenGui.Name = "ShowID"

TextLabel.Parent = ScreenGui
TextLabel.BackgroundColor3 = Color3.new(0, 0, 0)
TextLabel.BackgroundTransparency = 0.3
TextLabel.Size = UDim2.new(1, 0, 0.3, 0) -- Lebar layar penuh
TextLabel.Position = UDim2.new(0, 0, 0.35, 0) -- Di tengah
TextLabel.Font = Enum.Font.SourceSansBold
TextLabel.Text = "ID MAP INI:\n" .. game.PlaceId
TextLabel.TextColor3 = Color3.new(1, 1, 0) -- Warna Kuning
TextLabel.TextScaled = true -- Otomatis besar
